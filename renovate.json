{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>jabrown93/.github//renovate-config.json"]
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "gomod (minor/patch)",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "gomod (major)",
      "automerge": false,
      "labels": [
        "renovate-major",
        "gomod"
      ]
    },
    {
      "description": "Update `go` directive in go.mod (e.g., 1.22 → 1.23)",
      "matchManagers": [
        "gomod"
      ],
      "matchDepNames": [
        "go"
      ],
      "versioning": "go-mod-directive",
      "rangeStrategy": "bump",
      "groupName": "Go toolchain (go.mod)",
      "automerge": false,
      "labels": [
        "go-version"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "asdf .tool-versions → golang X.Y[.Z]",
      "managerFilePatterns": [
        "/(^|/)\\.tool-versions$/"
      ],
      "matchStrings": [
        "(?m)^golang\\s+(?<currentValue>\\S+)$"
      ],
      "depNameTemplate": "golang",
      "datasourceTemplate": "golang-version",
      "versioningTemplate": "go"
    },
    {
      "customType": "regex",
      "description": "goenv .go-version → X.Y[.Z]",
      "managerFilePatterns": [
        "/(^|/)\\.go-version$/"
      ],
      "matchStrings": [
        "(?<currentValue>\\S+)"
      ],
      "depNameTemplate": "golang",
      "datasourceTemplate": "golang-version",
      "versioningTemplate": "go"
    }
  ]
}
